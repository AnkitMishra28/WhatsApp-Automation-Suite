{
  "name": "whatsapp-form-collector",
  "version": "1.0.0",
  "description": "User-friendly form that sends data to WhatsApp and exports to CSV",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "dev:start": "node dev-start.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "setup": "node start.js",
    "build:prod": "npm run build && NODE_ENV=production npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "twilio": "^4.19.0",
    "dotenv": "^16.3.1",
    "csv-writer": "^1.6.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "keywords": ["form", "whatsapp", "csv", "react", "nodejs"],
  "author": "Your Name",
  "license": "MIT"
} 